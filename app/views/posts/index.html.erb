<div class="main posts-index">
  <div class="container">
    <div class="top-wrapper">
      <h2>予定一覧</h2>
      <a href="/posts/new">
        <button class="btn">新規追加</button>
      </a>
    </div>
    <table class="posts-index-item">
      <thead>
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>終日</th>
          <th>更新日時</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.start_date.strftime("%Y/m/%d") %></td>
            <td><%= post.end_date.strftime("%Y/%m/%d") %></td>
            <td><% if post.is_all_day == true %>
            ○
            <% elsif post.is_all_day == false %>
            <% end %>
            </td>
            <td><%= post.updated_at.strftime("%Y/%m/%d %-H:%M") %></td>
            <td><%= link_to "詳細", post_path(post.id) %></td>
            <td><%= link_to "編集", edit_post_path(post.id) %></td>
            <td><%= button_to "削除", post, {method: :delete, data: {confirm: "予定を削除しますか？"}} %></td>
        <% end %>
      </tbody>
    </table>
    <footer>
      <div class="bottom-wrapper">
        <p>
          <%= "予定合計：#{@posts.count}件" %></a>
        </p>
        <p>
          <%= "本日の日付：#{Date.today.strftime("%Y/%m/%d")}" %>
        </p>
      </div>
    </footer>
  </div>
</div>