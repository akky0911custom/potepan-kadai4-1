<div class="main posts-index">
  <div class="container">
    <div class="top-wrapper">
      <h2>予定一覧</h2>
      <%= link_to "新規追加", new_post_path, class: "btn new" %>
    </div>
    <div class="posts-index-item">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>更新日時</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td><%= post.title %></td>
              <td><%= post.start_date.strftime("%Y/%m/%d") %></td>
              <td><%= post.end_date.strftime("%Y/%m/%d") %></td>
              <td><% if post.is_all_day == true %>
              ○
              <% else %>
              <% end %>
              </td>
              <td><%= post.updated_at.strftime("%Y/%m/%d %-H:%M") %></td>
              <td><%= link_to "詳細", post_path(post) %></td>
              <td><%= link_to "編集", edit_post_path(post) %></td>
              <td><%= link_to "削除", post, {method: :delete, data: {confirm: "予定を削除しますか？"}} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="bottom-wrapper">
      <p>
        <%= "予定合計：#{@posts.count}件" %>
      </p>
      <p>
        <%= "本日の日付：#{Date.today.strftime("%Y/%m/%d")}" %>
      </p>
    </div>
  </div>
</div>
